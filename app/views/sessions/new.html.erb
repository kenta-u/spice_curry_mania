<div class="container">
  <%= form_with url: login_path, method: :post do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "ログイン" %>
  <% end %>
  <br>
  <%= link_to '新規ユーザー登録はこちらから', new_user_path %>
</div>
