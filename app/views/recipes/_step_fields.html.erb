<div class="nested-fields d-flex">
  <div class="form-group col-4">
    <%= f.label :direction %>
    <%= f.text_area :direction, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="offset-1 col-2 px-0 w-auto d-flex align-items-end">
    <%= link_to_remove_association "削除", f, class: "btn btn-danger" %>
  </div>
</div>