<div class="container border-bottom pb-3">
  <div class="row">
    <div class="col-md-2">
    <% if @user.image? %>
      <%= image_tag @user.image.url, size: '100x100', class: "rounded-circle" %>
    <% else %>
      <%= image_tag 'user_icon.png', size: '100x100', class: "rounded-circle" %>
    <% end %>
    </div>
    <div class="col-md-6 d-flex align-items-center">
      <h2><%= @user.name %>さんのレシピ一覧</h2>
    </div>
  </div>
</div>
<div class="container py-5">
  <div class="col-12">
    <div class="row">
      <%= render partial: 'recipes/recipe', collection: @recipes %>
    </div>
  </div>
</div>