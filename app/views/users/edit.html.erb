<div class="container">
  <%= form_with model: @user, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.submit "編集" %>
  <% end %>
</div>